@using WebApplication1.Models
@model List<Teams>
<table class="table">
    <h3>
        Teams
        <a class="btn btn-primary" asp-action="Create">Create</a>
    </h3>

    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">ImageUrl</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
             <tr>
                <th>@item.Id</th>
            <th>@item.Name</th>
            <td>@item.Title</td>
            <td>@item.Description</td>
             <td>
                 <div>
                     <img src="~/upload/teams/@item.ImageUrl"> </img>
                 </div>
             </td>
             <td>
                 <a class="btn btn-warning" asp-action="Update" asp-controller="Teams" asp-route-id="@item.Id">Update</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Teams" asp-route-id="@item.Id">Delete</a>
             </td>
        </tr>
        }
       
    </tbody>
</table>
